<h1 class="text-center">รายละเอียดบัญชี ป.210</h1>
  <div class="row">
    <div class="col-xs-12">
      <%= link_to 'ย้อนกลับ' , internals_path , class: 'btn btn-danger'%>
      <%= link_to 'สแกนหมายเลขสิ่งของ' , new_internal_parcels_path(@internal.id) , class: 'btn btn-success' %>
      <div class="btn-group" role="group">
        <%= link_to 'พิมพ์เอกสาร' , paper_internal_path(@internal.id , 'pdf') , class: 'btn btn-primary' , target:'_blank' %>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">รายละเอียด ป.58 เลขที่ <%= @internal.internal_number %></div>
        <div class="panel-body">
          <div class="col-xs-12">
            <div class="col-xs-6">
              <strong>เลขที่ : </strong><%= @internal.internal_number %> <br>
              <strong>ต้นทาง : </strong><%= @internal.origin %> <br>
              <strong>ปลายทาง: </strong><%= @internal.destination %> <br>
            </div>
            <div class="col-xs-6">
              <strong>วันที่เอกสาร : </strong><%= @internal.sent_date.strftime("%d/%m/%y") %>  <br>
              <strong>ชื่อผู้สร้าง : </strong><%= @internal.name %><br>
              <strong>จำนวนสิ่งของ : </strong><%= @internal.internal_count %>
            </div>
            <hr>
            <div class="col-xs-12">
              <strong>หมายเหตุ : </strong><%= @internal.remark %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">รายละเอียดถุง</div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover table-bordered" id="outbounds">
          <thead>
            <th class="text-center">#</th>
            <th class="text-center">เลขสิ่งของ</th>
            <th class="text-center">ว/ด/ป เวลา ที่สแกน</th>
          </thead>
          <tbody>
            <% count = 0 %>
            <% @parcels.each do |bag| %>
            <tr>
              <td class="text-center"><%= count += 1 %></td>
              <td class="text-center"><%= bag.parcel_number_check.upcase%></td>
              <td class="text-center"><%= bag.created_at.strftime("%d/%m/%Y  %H:%M:%S") %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="text-center"><%= will_paginate @parcels , renderer: BootstrapPagination::Rails %></div>
  </div>
