<h1>การแสดงความคิดเห็น</h1>
<%= link_to 'กลับหน้าหลัก' , root_path , class: 'btn btn-danger' %>
<%= form_for @feedback do |form| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <div class="form-group">
          <%= form.label :หัวข้อ , class: 'label-control'  %>
          <%= form.text_field :topic , class: 'form-control' , required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :รายละเอียด , class: 'label-control' %>
        <%= form.text_field :comment , class: ' form-control' , required: true  %>
      </div>
	
	  <div class="form-group">
    	<%= form.label :ผู้เสนอความคิดเห็น , class: 'label-control' %>
    	<%= form.text_field :name , class: ' form-control' , required: true  %>
  	  </div>
      <div class="form-group">
        <%= form.submit 'บันทึกผล' , class: 'btn btn-success btn-rounded btn-block' %>
      </div>
    </div>
  </div>

<% end %>
