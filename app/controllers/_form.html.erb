<%= form_for @sent do |form| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= form.label :เลือกเอกสาร , class:'label-control' %>
        <%= form.collection_select :id , Document.where(status_id: 1), :id , :title , {prompt: 'โปรดเลือกเอกสาร'}  , class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :เลือกแผนกปลายทาง , class:'label-control' %>
        <%= form.collection_select :department_ids, Department.all  ,:id , :name,{include_blank: false},{ multiple: true, size: 7 , class:'form-control' } %>

      </div>
      <div class="form-group">
        <%= form.label :กำหนดส่งเอกสาร , class: 'label-control' %>
        <%= form.date_field :duedate , class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit 'จัดส่งเอกสาร' , class:'btn btn-primary btn-rounded btn-block' %>
        <%= link_to 'ย้อนกลับ' , sents_path , class:'btn btn-warning btn-rounded btn-block'  %>
      </div>
    </div>
  </div>
<% end %>
